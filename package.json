{
    "name": "blog-e2e-tests",
    "version": "1.0.0",
    "description": "E2E and Lighthouse tests for Syafiq Hadzir Blog",
    "type": "module",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:ui": "playwright test --ui",
        "lighthouse": "lhci autorun",
        "lighthouse:collect": "lhci collect --staticDistDir=./_site",
        "lint": "npm run lint:ts && npm run lint:md",
        "lint:ts": "eslint .",
        "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#vendor\" \"#_site\"",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc --noEmit",
        "sonar": "npm run report && sonar-scanner",
        "report": "npm run lint:report && npm run test:report",
        "lint:report": "npm run lint:ts:report && npm run lint:css:report",
        "lint:ts:report": "eslint . --format json --output-file eslint-report.json || exit 0",
        "lint:css:report": "stylelint \"**/*.{css,scss}\" --formatter json --output-file stylelint-report.json || exit 0",
        "test:report": "bundle exec rspec spec/unit --format RspecJunitFormatter --out sonar-report.xml || exit 0",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@lhci/cli": "^0.15.1",
        "@playwright/test": "^1.57.0",
        "@types/node": "^25.0.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-playwright": "^2.4.0",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "markdownlint-cli2": "^0.20.0",
        "prettier": "^3.7.4",
        "sonarqube-scanner": "^4.3.2",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.md": [
            "markdownlint-cli2 --fix",
            "prettier --write"
        ],
        "*.{css,scss}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{json,yml,yaml}": [
            "prettier --write"
        ]
    },
    "overrides": {
        "node-forge": "^1.3.3",
        "tmp": "^0.2.5"
    }
}
