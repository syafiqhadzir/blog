{
  "name": "blog-e2e-tests",
  "version": "1.0.0",
  "description": "E2E and Lighthouse tests for Syafiq Hadzir Blog",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "test:e2e": "playwright test",
    "test:fast": "cross-env PERF_MODE=true playwright test --project=fast-chromium",
    "test:full": "cross-env PERF_MODE=false CHECK_EXTERNAL=true playwright test --project=full-chromium",
    "test:all": "cross-env PERF_MODE=false CHECK_EXTERNAL=true playwright test",
    "pw:install": "npx playwright install --with-deps",
    "serve:site": "http-server _site -p 5000",
    "test:amp": "npx amphtml-validator _site/index.html _site/tags.html _site/404.html",
    "minify": "node scripts/minify.js",
    "build": "bundle exec jekyll build && npm run build:sw",
    "build:sw": "node scripts/build-sw.js",
    "optimize:img": "node scripts/optimize-images.js",
    "lighthouse": "npx lhci autorun",
    "lighthouse:collect": "npx lhci autorun --config=lighthouserc.cjs",
    "lighthouse:local": "npx lhci autorun --config=lighthouserc.local.cjs",
    "lighthouse:ci": "npx lhci autorun --config=lighthouserc.ci.cjs",
    "lighthouse:desktop": "npx lhci autorun --config=lighthouserc.desktop.cjs",
    "lighthouse:3g": "npx lhci autorun --config=lighthouserc.3g.cjs",
    "lighthouse:slow-3g": "npx lhci autorun --config=lighthouserc.slow-3g.cjs",
    "lighthouse:flows": "node lighthouse/flows/critical-paths.js",
    "lighthouse:errors": "node lighthouse/flows/error-states.js",
    "lighthouse:budget": "npx lhci collect --staticDistDir=./_site --budgetPath=./budget.json",
    "lighthouse:all": "npm run lighthouse && npm run lighthouse:desktop && npm run lighthouse:3g",
    "lighthouse:benchmark": "node lighthouse/benchmarks/competitors.js",
    "lighthouse:trends": "node lighthouse/dashboard/trends.js",
    "lighthouse:analyze": "node scripts/ai-lighthouse-analyzer.js",
    "lighthouse:docs": "node scripts/generate-perf-documentation.js",
    "lhci:server": "docker-compose up -d",
    "lint": "npm run lint:ts && npm run lint:css && npm run lint:md && npm run lint:commit",
    "lint:ts": "eslint .",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#vendor\" \"#_site\" \"#test-results\" \"#playwright-report\"",
    "lint:commit": "commitlint --from=main",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "sonar": "npm run report && sonar-scanner",
    "report": "npm run lint:report && npm run test:report",
    "lint:report": "npm run lint:ts:report && npm run lint:css:report",
    "lint:ts:report": "eslint . --format json --output-file eslint-report.json || exit 0",
    "lint:css:report": "stylelint \"**/*.{css,scss}\" --formatter json --output-file stylelint-report.json || exit 0",
    "test:report": "bundle exec rspec spec/unit --format RspecJunitFormatter --out sonar-report.xml || exit 0",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "amphtml-validator": "^1.0.38",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.2.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "glob": "^13.0.0",
    "globals": "^17.0.0",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "sonarqube-scanner": "^4.3.2",
    "stylelint": "^16.26.1",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-order": "^7.0.1",
    "svgo": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "workbox-build": "^7.4.0",
    "workbox-cacheable-response": "^7.4.0",
    "workbox-core": "^7.4.0",
    "workbox-expiration": "^7.4.0",
    "workbox-precaching": "^7.4.0",
    "workbox-routing": "^7.4.0",
    "workbox-strategies": "^7.4.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "braces": "^3.0.3",
    "cross-spawn": "^7.0.6",
    "decompress": "^4.2.1",
    "download": "^8.0.0",
    "find-versions": "^5.1.0",
    "inflight": "npm:@pnpm/npm-lifecycle@3.1.3",
    "node-forge": "^1.3.3",
    "rimraf": "^6.0.1",
    "semver": "^7.5.2",
    "semver-regex": "^3.1.4",
    "tmp": "^0.2.5",
    "trim-newlines": "^3.0.1",
    "tunnel-agent": "^0.6.0",
    "url-regex": "^5.0.0",
    "magic-string": "^0.30.0",
    "source-map": "0.7.4",
    "html-encoding-sniffer": "^6.0.0"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.3"
  }
}
