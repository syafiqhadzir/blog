---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/sitemap.xsl"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  {% assign posts = site.posts | where_exp: "item", "item.hidden != true" %}
  {% assign pages = site.pages | where_exp: "item", "item.hidden != true" %}

  {% for post in posts %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      {% if post.last_modified_at %}
        <lastmod>{{ post.last_modified_at | date_to_xmlschema }}</lastmod>
      {% else %}
        <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      {% endif %}
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
      {% if post.image %}
        <image:image>
          <image:loc>{{ post.image | absolute_url }}</image:loc>
          <image:title>{{ post.title | xml_escape }}</image:title>
          <image:caption>{{ post.title | xml_escape }}</image:caption>
        </image:image>
      {% endif %}
    </url>
  {% endfor %}

  {% for page in pages %}
    {% unless page.url contains "404" or page.url contains "sw-install" or page.url contains "offline" or page.url contains "google" or page.name == "sitemap.xml" or page.url contains "feed.xml" or page.url contains "robots.txt" %}
      <url>
        <loc>{{ page.url | absolute_url }}</loc>
        {% if page.last_modified_at %}
          <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
        {% endif %}
        {% if page.url == "/" %}
          <changefreq>daily</changefreq>
          <priority>1.0</priority>
        {% elsif page.url contains "archive" or page.url contains "tags" %}
           <changefreq>weekly</changefreq>
           <priority>0.5</priority>
        {% else %}
          <changefreq>monthly</changefreq>
          <priority>0.3</priority>
        {% endif %}
      </url>
    {% endunless %}
  {% endfor %}
</urlset>
