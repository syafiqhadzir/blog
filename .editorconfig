# EditorConfig - https://editorconfig.org
# Ensures consistent coding styles across different editors and IDEs

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# YAML, HTML, CSS, SCSS (2-space indent)
[*.{yml,yaml,html,css,scss,liquid}]
indent_size = 2

# JSON (4-space to match Prettier)
[*.json]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 4

# Ruby
[*.{rb,gemspec}]
indent_size = 2

# Gemfile and Rakefile
[{Gemfile,Rakefile}]
indent_size = 2

# TypeScript / JavaScript
[*.{ts,js,mjs,cjs}]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_size = 4
